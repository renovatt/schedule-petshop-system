generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  username  String
  email     String      @unique
  password  String
  clients   Clients[]
  schedules Schedules[]
}

model Clients {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  age          String
  sex          String
  street       String
  house_number String
  neighborhood String
  city         String
  contact      String
  created_at   DateTime @default(now())

  user   User?   @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId
}

model Schedules {
  id                 String   @id @default(auto()) @map("_id") @db.ObjectId
  tutor              String
  pet                String
  breed              String
  reference_image_id String
  age                String
  weight             String
  sex                String
  client             Boolean
  specie             Boolean
  status             Boolean
  date               DateTime
  canceled_date      DateTime
  created_at         DateTime @default(now())

  user   User?   @relation(fields: [userId], references: [id])
  userId String? @db.ObjectId
}
